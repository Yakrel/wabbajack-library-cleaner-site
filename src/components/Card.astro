---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-[#1e293b] border border-[#334155] rounded-xl p-8 text-center transition-all duration-200 hover:-translate-y-1 hover:border-wj-purple h-full flex flex-col items-center">
  <div class="text-wj-purple mb-6 flex justify-center">
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-semibold mb-3 text-white">{title}</h3>
  <p class="text-slate-400 text-sm leading-relaxed">{description}</p>
</div>
