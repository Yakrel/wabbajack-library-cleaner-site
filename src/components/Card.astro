---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-[#1e293b] border border-[#334155] rounded-xl p-8 text-center transition-all duration-200 hover:-translate-y-1 hover:border-violet-500">
  <span class="text-5xl block mb-4">{icon}</span>
  <h3 class="text-xl font-semibold mb-3">{title}</h3>
  <p class="text-slate-400 text-sm">{description}</p>
</div>
