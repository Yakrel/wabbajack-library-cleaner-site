---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="text-center">
  <Image 
    src={src} 
    alt={alt} 
    class="screenshot-img w-full rounded-xl border border-[#334155] mb-3 transition-transform duration-200 hover:scale-[1.02] cursor-pointer"
  />
  <figcaption class="text-slate-400 text-sm">{caption}</figcaption>
</figure>
