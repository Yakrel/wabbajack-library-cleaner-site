---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="text-center">
  <div class="w-16 h-16 bg-violet-600 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5">
    {number}
  </div>
  <h3 class="text-lg font-semibold mb-3">{title}</h3>
  <p class="text-slate-400 text-sm">{description}</p>
</div>
