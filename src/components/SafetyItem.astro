---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex gap-5 items-start p-6 bg-[#1e293b] rounded-xl border border-[#334155]">
  <span class="text-2xl text-emerald-500 flex-shrink-0">{icon}</span>
  <div>
    <h4 class="text-lg font-semibold mb-1">{title}</h4>
    <p class="text-slate-400 text-sm m-0">{description}</p>
  </div>
</div>
