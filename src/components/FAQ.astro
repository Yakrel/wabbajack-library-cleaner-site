---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="bg-[#1e293b] border border-[#334155] rounded-xl mb-3 overflow-hidden group">
  <summary class="px-6 py-5 cursor-pointer font-semibold text-base list-none flex justify-between items-center">
    {title}
    <span class="text-violet-500 text-2xl group-open:hidden">+</span>
    <span class="text-violet-500 text-2xl hidden group-open:inline">âˆ’</span>
  </summary>
  <div class="px-6 pb-5 text-slate-400 leading-relaxed">
    <slot />
  </div>
</details>
