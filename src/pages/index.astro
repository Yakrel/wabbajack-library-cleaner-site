---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import mainImg from '../assets/screenshots/wabbajack-main.png';
import aboutComboImg from '../assets/screenshots/wabbajack-about-combo.png';
---

<Layout title="Wabbajack Library Cleaner - Free Up Disk Space | Remove Orphaned Mods">
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#0f172a] via-[#0a0f1f] to-[#020617]"></div>
    <div class="absolute top-20 left-10 w-72 h-72 bg-wj-purple/10 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-wj-green/10 rounded-full blur-3xl animate-pulse-slow"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16 lg:pt-32 lg:pb-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-wj-purple/10 border border-wj-purple/30 rounded-full text-sm text-wj-purple mb-6">
            <span class="w-2 h-2 bg-wj-green rounded-full animate-pulse"></span>
            v2.1.1 ‚Äî Built with Rust ü¶Ä
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 leading-tight tracking-tight">
            <span class="gradient-text">Wabbajack</span>
            <br />
            <span class="text-white">Library Cleaner</span>
          </h1>
          
          <p class="text-lg sm:text-xl text-slate-400 mb-8 leading-relaxed max-w-xl mx-auto lg:mx-0">
            Safely remove <strong class="text-wj-green">orphaned mods</strong> and <strong class="text-wj-green">old versions</strong> from your downloads folder. Free up hundreds of gigabytes without breaking your modlists.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-10">
            <a href="https://github.com/Yakrel/wabbajack-library-cleaner/releases/latest" 
               class="group inline-flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-wj-purple to-[#7a00c7] hover:from-[#b833ff] hover:to-wj-purple text-white rounded-xl font-semibold text-lg transition-all duration-300 hover:-translate-y-1 shadow-lg shadow-purple-900/30 hover:shadow-purple-900/50">
              <svg class="w-5 h-5 group-hover:animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
              </svg>
              Download Free
            </a>
            
            <a href="https://www.nexusmods.com/skyrimspecialedition/mods/164533" 
               target="_blank" rel="noopener noreferrer"
               class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-[#da732c] hover:bg-[#e88540] text-white rounded-xl font-semibold text-lg transition-all duration-300 hover:-translate-y-1 shadow-lg shadow-orange-900/30">
              <img src="/nexus-logo.png" alt="Nexus Mods logo" class="w-6 h-6 object-contain" />
              Nexus Mods
            </a>
          </div>
          
          <div class="flex flex-wrap items-center justify-center lg:justify-start gap-4 text-sm text-slate-500">
            <span class="flex items-center gap-2 px-3 py-1.5 bg-[#1e293b] rounded-lg border border-[#334155]">
              <svg class="w-4 h-4 text-[#0078d4]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
              </svg>
              Windows
            </span>
            <span class="flex items-center gap-2 px-3 py-1.5 bg-[#1e293b] rounded-lg border border-[#334155]">
              <svg class="w-4 h-4 text-[#FCC624]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.504.587c-.155 0-.311.001-.465.003-.653.014-1.301.065-1.937.174a12 12 0 00-1.883.525C7.607.53 7.02.84 6.47 1.214c-.55.375-1.057.813-1.512 1.308-.454.495-.854 1.042-1.19 1.634-.337.592-.607 1.221-.805 1.873-.198.652-.323 1.32-.375 1.994-.053.675-.033 1.354.058 2.023.091.67.253 1.325.482 1.955.228.629.522 1.229.878 1.79.356.561.771 1.078 1.239 1.544.468.466.985.881 1.546 1.237.562.356 1.161.65 1.79.878.63.229 1.286.39 1.956.482.669.091 1.348.111 2.023.058.674-.052 1.342-.177 1.994-.375.652-.198 1.282-.468 1.873-.805.592-.336 1.14-.736 1.634-1.19.495-.454.933-.962 1.308-1.512.375-.55.684-1.137.925-1.749.242-.612.414-1.244.525-1.883.109-.636.16-1.284.174-1.937.002-.154.003-.31.003-.465 0-.155-.001-.311-.003-.465a12 12 0 00-.174-1.937 12 12 0 00-.525-1.883 12 12 0 00-.925-1.749c-.375-.55-.813-1.057-1.308-1.512-.494-.454-1.042-.854-1.634-1.19-.592-.337-1.221-.607-1.873-.805a12 12 0 00-1.994-.375 12 12 0 00-2.023.058 12 12 0 00-1.955.482 12 12 0 00-1.79.878c-.561.356-1.078.771-1.544 1.239-.466.468-.881.985-1.237 1.546-.356.562-.65 1.161-.878 1.79-.229.63-.39 1.286-.482 1.956-.091.669-.111 1.348-.058 2.023.052.674.177 1.342.375 1.994.198.652.468 1.282.805 1.873.336.592.736 1.14 1.19 1.634.454.495.962.933 1.512 1.308.55.375 1.137.684 1.749.925.612.242 1.244.414 1.883.525.636.109 1.284.16 1.937.174.154.002.31.003.465.003z"/>
              </svg>
              Linux
            </span>
            <span class="flex items-center gap-2 px-3 py-1.5 bg-[#1e293b] rounded-lg border border-[#334155]">
              <svg class="w-4 h-4 text-wj-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              Open Source
            </span>
          </div>
        </div>
        
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-wj-purple/20 to-wj-green/20 rounded-2xl blur-2xl"></div>
          <div class="relative bg-[#0f172a] rounded-2xl overflow-hidden border border-[#334155] shadow-2xl">
            <Image src={mainImg} alt="Wabbajack Library Cleaner main interface showing mod cleanup options" class="w-full h-auto" data-zoomable loading="eager" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-[#0f172a] border-y border-[#334155]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold gradient-text mb-2">200GB+</div>
          <div class="text-slate-400 text-sm">Average Space Recovered</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold gradient-text mb-2">~6MB</div>
          <div class="text-slate-400 text-sm">Lightweight App Size</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold gradient-text mb-2">100%</div>
          <div class="text-slate-400 text-sm">Free & Open Source</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section id="problem" class="py-16 lg:py-24 bg-[#020617]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-red-500/10 text-red-400 text-sm font-medium rounded-full mb-4">The Problem</span>
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Your Disk Space Is Disappearing</h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">
          Wabbajack preserves every file to ensure reliability ‚Äî but this leads to massive accumulation of unused files over time.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
        <article class="group relative bg-[#1e293b] rounded-2xl p-8 border border-[#334155] hover:border-red-500/50 transition-all duration-300 card-hover">
          <div class="absolute top-0 right-0 w-32 h-32 bg-red-500/5 rounded-full blur-2xl group-hover:bg-red-500/10 transition-colors"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-red-500/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-red-500/20 transition-colors">
              <svg class="w-7 h-7 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">Orphaned Mods</h3>
            <p class="text-slate-400 leading-relaxed">When you delete a modlist, its downloaded archives stay behind. Tried Lorerim, Nordic Souls, or other lists? Those files remain forever.</p>
          </div>
        </article>
        
        <article class="group relative bg-[#1e293b] rounded-2xl p-8 border border-[#334155] hover:border-orange-500/50 transition-all duration-300 card-hover">
          <div class="absolute top-0 right-0 w-32 h-32 bg-orange-500/5 rounded-full blur-2xl group-hover:bg-orange-500/10 transition-colors"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-orange-500/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-orange-500/20 transition-colors">
              <svg class="w-7 h-7 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">Old Versions</h3>
            <p class="text-slate-400 leading-relaxed">Mods update frequently. Wabbajack keeps every version for rollback. You might have 5-10 copies of the same mod sitting there.</p>
          </div>
        </article>
        
        <article class="group relative bg-[#1e293b] rounded-2xl p-8 border border-[#334155] hover:border-yellow-500/50 transition-all duration-300 card-hover">
          <div class="absolute top-0 right-0 w-32 h-32 bg-yellow-500/5 rounded-full blur-2xl group-hover:bg-yellow-500/10 transition-colors"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-yellow-500/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-yellow-500/20 transition-colors">
              <svg class="w-7 h-7 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">Massive Bloat</h3>
            <p class="text-slate-400 leading-relaxed">Active modders commonly accumulate 200GB+ of redundant files. Some users report 500GB or more just in unused downloads.</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section id="features" class="py-16 lg:py-24 bg-[#0f172a]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-wj-green/10 text-wj-green text-sm font-medium rounded-full mb-4">The Solution</span>
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Clean Your Library Safely</h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">Wabbajack Library Cleaner scans your downloads and lets you safely remove what you don't need.</p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="group text-center p-6 rounded-2xl bg-[#1e293b]/50 border border-transparent hover:border-wj-purple/30 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-5 bg-wj-purple/10 rounded-2xl flex items-center justify-center group-hover:bg-wj-purple/20 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-wj-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Smart Detection</h3>
          <p class="text-slate-400 text-sm">Reads .wabbajack files to understand which mods your modlists actually need.</p>
        </div>
        
        <div class="group text-center p-6 rounded-2xl bg-[#1e293b]/50 border border-transparent hover:border-wj-purple/30 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-5 bg-wj-purple/10 rounded-2xl flex items-center justify-center group-hover:bg-wj-purple/20 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-wj-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Orphan Cleanup</h3>
          <p class="text-slate-400 text-sm">Find and remove mods not used by any of your active modlists.</p>
        </div>
        
        <div class="group text-center p-6 rounded-2xl bg-[#1e293b]/50 border border-transparent hover:border-wj-purple/30 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-5 bg-wj-purple/10 rounded-2xl flex items-center justify-center group-hover:bg-wj-purple/20 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-wj-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Version Cleanup</h3>
          <p class="text-slate-400 text-sm">Keep newest version of each mod, remove all the old duplicates.</p>
        </div>
        
        <div class="group text-center p-6 rounded-2xl bg-[#1e293b]/50 border border-transparent hover:border-wj-purple/30 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-5 bg-wj-green/10 rounded-2xl flex items-center justify-center group-hover:bg-wj-green/20 group-hover:scale-110 transition-all duration-300">
            <svg class="w-8 h-8 text-wj-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Safe Deletion</h3>
          <p class="text-slate-400 text-sm">Files move to backup folder, not permanently deleted. Easily restorable.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section id="how-it-works" class="py-16 lg:py-24 bg-[#020617]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-wj-purple/10 text-wj-purple text-sm font-medium rounded-full mb-4">Quick & Easy</span>
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">How It Works</h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">Four simple steps to reclaim your disk space. No technical knowledge required.</p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="relative">
          <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-gradient-to-r from-wj-purple to-transparent -translate-x-8"></div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-wj-purple to-[#7a00c7] rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 shadow-lg shadow-purple-900/30">1</div>
            <h3 class="text-lg font-semibold mb-3">Select Wabbajack Folder</h3>
            <p class="text-slate-400 text-sm">Point to where Wabbajack.exe is installed. Modlists are detected automatically.</p>
          </div>
        </div>
        
        <div class="relative">
          <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-gradient-to-r from-wj-purple to-transparent -translate-x-8"></div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-wj-purple to-[#7a00c7] rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 shadow-lg shadow-purple-900/30">2</div>
            <h3 class="text-lg font-semibold mb-3">Select Downloads Folder</h3>
            <p class="text-slate-400 text-sm">Point to your mod downloads folder ‚Äî the big one eating your disk space.</p>
          </div>
        </div>
        
        <div class="relative">
          <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-gradient-to-r from-wj-purple to-transparent -translate-x-8"></div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-wj-purple to-[#7a00c7] rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 shadow-lg shadow-purple-900/30">3</div>
            <h3 class="text-lg font-semibold mb-3">Choose Your Modlists</h3>
            <p class="text-slate-400 text-sm">Check the modlists you're actively using. Everything else becomes fair game.</p>
          </div>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-wj-green to-[#00a87a] rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 shadow-lg shadow-green-900/30">4</div>
          <h3 class="text-lg font-semibold mb-3">Scan & Clean</h3>
          <p class="text-slate-400 text-sm">Hit scan to preview. Happy with results? Hit clean and watch space come back.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Screenshots -->
  <section id="screenshots" class="py-16 lg:py-24 bg-[#0f172a]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-wj-purple/10 text-wj-purple text-sm font-medium rounded-full mb-4">User Interface</span>
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Modern & Intuitive Design</h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">A clean, dark-themed interface built with modern GUI framework. Easy to use, hard to make mistakes.</p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        <figure class="relative group">
          <div class="absolute -inset-2 bg-gradient-to-r from-wj-purple/20 to-wj-green/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-[#1e293b] rounded-xl overflow-hidden border border-[#334155] shadow-2xl hover:border-wj-purple/30 transition-colors">
            <Image src={mainImg} alt="Wabbajack Library Cleaner main interface showing mod cleanup options" class="w-full h-auto" data-zoomable loading="lazy" />
          </div>
          <figcaption class="text-center text-slate-400 text-sm mt-4">Main Interface ‚Ä¢ Click to enlarge</figcaption>
        </figure>

        <figure class="relative group">
          <div class="absolute -inset-2 bg-gradient-to-r from-wj-green/20 to-wj-purple/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-[#1e293b] rounded-xl overflow-hidden border border-[#334155] shadow-2xl hover:border-wj-purple/30 transition-colors">
            <Image src={aboutComboImg} alt="Wabbajack Library Cleaner about dialog and version info" class="w-full h-auto" data-zoomable loading="lazy" />
          </div>
          <figcaption class="text-center text-slate-400 text-sm mt-4">About Dialog & Options ‚Ä¢ Click to enlarge</figcaption>
        </figure>
      </div>
    </div>
  </section>

  <!-- Safety Section -->
  <section id="safety" class="py-16 lg:py-24 bg-[#020617]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <span class="inline-block px-4 py-1.5 bg-wj-green/10 text-wj-green text-sm font-medium rounded-full mb-4">Your Data Is Safe</span>
          <h2 class="text-3xl sm:text-4xl font-bold mb-6">Safety First Approach</h2>
          <p class="text-slate-400 text-lg mb-8">We understand how important your mod collection is. That's why we built multiple safety features to prevent any accidental data loss.</p>
          
          <div class="space-y-4">
